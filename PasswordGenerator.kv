<PasswordGeneratorLayout>:
    orientation: 'vertical'
    padding: 50
    spacing: 10
    canvas.before:
        Color:
            rgba: 0.1765, 0.3647, 0.4824, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Plateforme:'
    TextInput:
        id: platform_input
        multiline: False

    Label:
        text: 'Longueur du mot de passe:'
    TextInput:
        id: length_input
        multiline: False
    Label:
        id: result_label
        text: ''
    Button:
        text: 'Générer le mot de passe'
        on_press: root.generate_password()
    Button:
        text: 'Voir tous les mots de passe'
        on_press: root.show_password()
    Button:
        text: 'Quitter'
        on_press: app.stop()